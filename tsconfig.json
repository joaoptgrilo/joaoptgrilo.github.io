{
  "extends": "@joaoptgrilo/dev-config/tsconfig/base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.js",
    "*.mjs"
  ],
  "exclude": ["node_modules"]
}
